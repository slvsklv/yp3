<Window x:Class="yp3.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yp3"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">
    <Grid Background="#44FCBF">
        <!-- текстбоксы -->
        <TextBox x:Name="TextBox_Copy1" Margin="249,285,455,112" Background="#50EDC5"/>
        <TextBox x:Name="TextBox_Copy2" Margin="350,285,354,112" Background="#50EDC5"/>
        <ComboBox x:Name="TextBox_Copy" Margin="451,285,253,113" Background="#50EDC5"/>
        <!-- датагрид -->
        <DataGrid x:Name="UsersDataGrid" Margin="50,44,54,179" Background="#50EDC5" Foreground="#9943E4"/>
        <!-- Кнопки добавления, удаления и изменения -->
        <Button Content="Add" Click="AddButton_Click" Margin="275,343,443,44" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Update" Click="UpdateButton_Click" Margin="363,343,355,44" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Delete" Click="DeleteButton_Click" Margin="451,343,260,44" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Назад" Click="BackButton_Click" Margin="10,10,683,375" Background="#50EDC5" Foreground="#9943E4"/>
    </Grid>
</Window>
