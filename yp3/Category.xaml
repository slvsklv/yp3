<Window x:Class="yp3.Category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yp3"
        mc:Ignorable="d"
        Title="Category" Height="450" Width="800">
    
    <Grid Background="#44FCBF">
        <!-- текстбоксы -->
        <TextBox x:Name="CategoryTextBox" Margin="192,291,512,104" Background="#50EDC5" Foreground="#9943E4"/>
        <ComboBox x:Name="CategoryTextBox_Copy" Margin="302,291,402,104" Foreground="#9943E4" Background="{x:Null}"/>
        <!-- датагрид -->
        <DataGrid x:Name="CategoryDataGrid" Margin="50,44,54,179" Background="#50EDC5" Foreground="#9943E4"/>
        <!-- Кнопки добавления, удаления и изменения -->
        <Button Content="Add" Click="AddButton_Click" Margin="282,359,447,28" Background="#9943E4" Foreground="White"/>
        <Button Content="Update" Click="UpdateButton_Click" Margin="358,359,371,28" Background="#9943E4" Foreground="White"/>
        <Button Content="Delete" Click="DeleteButton_Click" Margin="434,359,289,28" Background="#9943E4" Foreground="White"/>
        <Button Content="Назад" Click="BackButton_Click" Margin="10,10,683,375" Background="#9943E4" Foreground="White"/>
    </Grid>
</Window>
