<Window x:Class="yp3.Role"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yp3"
        mc:Ignorable="d"
        Title="Role" Height="450" Width="800">
    <Grid Background="#44FCBF">
        <!-- текстбоксы -->
        <TextBox x:Name="RoleTextBox1" Margin="279,288,415,104" Background="#50EDC5"/>
        <TextBox x:Name="RoleTextBox2" Margin="400,288,294,104" Background="#50EDC5"/>
        <!-- датагрид -->
        <DataGrid x:Name="RoleDataGrid" Margin="50,44,54,172" Background="#50EDC5" Foreground="#9943E4"/>
        <!-- Кнопки добавления, удаления и изменения -->
        <Button Content="Add" Click="AddButton_Click" Margin="277,353,452,40" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Update" Click="UpdateButton_Click" Margin="353,353,376,40" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Delete" Click="DeleteButton_Click" Margin="429,353,294,40" Background="#50EDC5" Foreground="#9943E4"/>
        <Button Content="Назад" Click="BackButton_Click" Margin="10,10,683,375" Background="#50EDC5" Foreground="#9943E4"/>
    </Grid>
</Window>
